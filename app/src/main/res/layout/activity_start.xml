<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".activities.StartActivity">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        card_view:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/lotus"
                android:scaleType="centerCrop"
                 />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainLogoText"
                android:text="Target Smile"
                android:textSize="72sp"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Shruti Jain"
                android:id="@+id/secondaryLogoText"
                android:layout_above="@+id/mainLogoText"
                android:layout_centerHorizontal="true"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:textSize="24sp"
                android:layout_marginLeft="20dp" />






        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/startListView"
        android:layout_below="@+id/card_view"
        android:layout_centerHorizontal="true"
        android:headerDividersEnabled="false"
        android:layout_margin="5dp"
        android:padding="5dp" />


    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ratingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_border_white_24dp"
        android:layout_alignBottom="@+id/imageView"
        android:onClick="launchMarket"
        android:elevation="6dp"
        app:layout_anchor="@id/card_view"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginRight="5dp"

        />

</android.support.design.widget.CoordinatorLayout>


