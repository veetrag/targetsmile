<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        tools:context=".activities.HomeRemediesActivity"
        android:orientation="vertical" >


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewHomeRemedies"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        card_view:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewBackgroundHomeRemedies"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/sunrisebeach"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Home Remedies"
                android:id="@+id/homeRemediesLogo"
                android:textSize="72sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFF"
                android:layout_marginLeft="10dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:columnCount="2"
        android:rowCount="5">

        <Button

            android:text="Oral Ulcers"
            android:id="@+id/oralUlcersButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startOralUlcersDetailsActivity"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />
        <Button

            android:text="Stained Teeth"
            android:id="@+id/stainedTeethButton"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startStainedTeethDetailsActivity"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />

        <Button

            android:text="Sensitivity"
            android:id="@+id/sensitivityButton"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startSensitivityDetailsActivity"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />

        <Button

            android:text="Bleeding Gums"
            android:id="@+id/bleedingGumsButton"
            android:layout_above="@+id/oralUlcersButton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startBleedingGumsDetailsActivity"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />

        <Button

            android:text="Tooth Ache"
            android:id="@+id/toothAcheButton"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"

            android:onClick="startToothAcheDetailsActivity"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />

        <Button

            android:text="Bad Breath"
            android:id="@+id/badBreathButton"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startBadBreathDetailsActivity"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />

        <Button

            android:text="General Care"
            android:id="@+id/generalCareButton"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startGeneralCareDetailsActivity"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />

        <Button

            android:text="Food Lodgement"
            android:id="@+id/foodLodgementButton"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startFoodLodgementDetailsActivity"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />


        <Button

            android:text="Cavity"
            android:id="@+id/cavityButton"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startCavityDetailsActivity"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />


        <Button

            android:text="Restricted Mouth Opening"
            android:id="@+id/restrictedMouthOpeningButton"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#FFF"
            android:onClick="startRestrictedMouthOpeningDetailsActivity"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_gravity="bottom|left|right|top" />



    </GridLayout>


</LinearLayout>
