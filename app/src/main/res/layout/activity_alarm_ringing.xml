<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".activities.AlarmRinging"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewNightBrushing"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        card_view:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/startrails"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nightBrushingFactTextView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/nightbrushingfact"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textSize="64dp"
                android:padding="5dp"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/completedButton"
        android:layout_gravity="center_horizontal"
        android:onClick="closeAlarm"
        android:background="@drawable/abc_btn_colored_material"
        android:textColor="#FFF" />

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:id="@+id/adUnit"
        android:layout_gravity="center_horizontal|bottom"
        >


    </com.google.android.gms.ads.AdView>



</LinearLayout>

